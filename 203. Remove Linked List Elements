class Solution {
    public ListNode removeElements(ListNode head, int val) {
        ListNode dummy = new ListNode(0);
        
        dummy.next = head;
        ListNode prev = dummy;
        ListNode curr = prev.next;

        while(curr != null){
            if(curr.val == val){
                prev.next = prev.next.next;
                curr = prev.next;
            }else{
             curr = curr.next;
            prev = prev.next;
            }

        }
        return dummy.next;
        
    }
}
